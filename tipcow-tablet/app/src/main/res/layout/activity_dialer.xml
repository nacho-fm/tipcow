<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurpleDark"
    tools:context="tipcow.tc_tablet.DialerActivity">

    <ImageView
        android:id="@+id/tc_brand_horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:paddingLeft="60dp"
        android:background="@color/colorPurpleLight"
        app:srcCompat="@drawable/tc_brand_horizontal_scaled" />

    <View
        android:id="@+id/top_padding"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/tc_brand_horizontal" />

    <tipcow.tc_tablet.views.RobotoMediumTextView
        android:id="@+id/left_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_padding"
        android:paddingLeft="55dp"
        android:textColor="@color/colorOrange"
        android:textSize="110dp"
        android:textStyle="bold"
        android:text="@string/left_text_1" />

    <tipcow.tc_tablet.views.RobotoMediumTextView
        android:id="@+id/left_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_text_1"
        android:paddingLeft="75dp"
        android:textColor="@color/colorWhite"
        android:textSize="50dp"
        android:textStyle="bold"
        android:text="@string/left_text_2" />

    <tipcow.tc_tablet.views.RobotoMediumTextView
        android:id="@+id/left_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/left_text_2"
        android:paddingLeft="75dp"
        android:textColor="@color/colorOrange"
        android:textSize="50dp"
        android:textStyle="bold"
        android:text="@string/left_text_3" />

    <View
        android:id="@+id/middle_padding"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tc_brand_horizontal"
        android:layout_toRightOf="@id/left_text_1" />

    <tipcow.tc_tablet.views.RobotoMediumTextView
        android:id="@+id/phone_text"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="@string/enter_phone"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="25px"
        android:gravity="center"
        android:textSize="31dp"
        android:layout_below="@id/tc_brand_horizontal"
        android:layout_toRightOf="@id/middle_padding" />

    <RelativeLayout
        android:id="@+id/dialer_button_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="8px"
        android:background="@drawable/dialer_number"
        android:layout_toRightOf="@+id/middle_padding"
        android:layout_below="@+id/phone_text"
        android:clickable="true">
        <TextView
            android:id="@+id/dialer_button_1_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1"
            android:textColor="@color/colorWhite"
            android:textSize="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialer_button_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="8px"
        android:background="@drawable/dialer_number"
        android:layout_toRightOf="@+id/dialer_button_1"
        android:layout_below="@+id/phone_text"
        android:clickable="true">
        <TextView
            android:id="@+id/dialer_button_2_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="2"
            android:textColor="@color/colorWhite"
            android:textSize="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialer_button_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="8px"
        android:background="@drawable/dialer_number"
        android:layout_toRightOf="@+id/dialer_button_2"
        android:layout_below="@+id/phone_text"
        android:clickable="true">
        <TextView
            android:id="@+id/dialer_button_3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="3"
            android:textColor="@color/colorWhite"
            android:textSize="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialer_button_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="8px"
        android:background="@drawable/dialer_number"
        android:layout_toRightOf="@+id/middle_padding"
        android:layout_below="@+id/dialer_button_1"
        android:clickable="true">
        <TextView
            android:id="@+id/dialer_button_4_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="4"
            android:textColor="@color/colorWhite"
            android:textSize="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialer_button_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="8px"
        android:background="@drawable/dialer_number"
        android:layout_toRightOf="@+id/dialer_button_4"
        android:layout_below="@+id/dialer_button_2"
        android:clickable="true">
        <TextView
            android:id="@+id/dialer_button_5_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="5"
            android:textColor="@color/colorWhite"
            android:textSize="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialer_button_6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="8px"
        android:background="@drawable/dialer_number"
        android:layout_toRightOf="@+id/dialer_button_5"
        android:layout_below="@+id/dialer_button_3"
        android:clickable="true">
        <TextView
            android:id="@+id/dialer_button_6_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="6"
            android:textColor="@color/colorWhite"
            android:textSize="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialer_button_7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="8px"
        android:background="@drawable/dialer_number"
        android:layout_toRightOf="@+id/middle_padding"
        android:layout_below="@+id/dialer_button_4"
        android:clickable="true">
        <TextView
            android:id="@+id/dialer_button_7_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="7"
            android:textColor="@color/colorWhite"
            android:textSize="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialer_button_8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="8px"
        android:background="@drawable/dialer_number"
        android:layout_toRightOf="@+id/dialer_button_7"
        android:layout_below="@+id/dialer_button_5"
        android:clickable="true">
        <TextView
            android:id="@+id/dialer_button_8_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="8"
            android:textColor="@color/colorWhite"
            android:textSize="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialer_button_9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="8px"
        android:background="@drawable/dialer_number"
        android:layout_toRightOf="@+id/dialer_button_8"
        android:layout_below="@+id/dialer_button_6"
        android:clickable="true">
        <TextView
            android:id="@+id/dialer_button_9_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="9"
            android:textColor="@color/colorWhite"
            android:textSize="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialer_button_back"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="8px"
        android:background="@drawable/dialer_number"
        android:layout_toRightOf="@+id/middle_padding"
        android:layout_below="@+id/dialer_button_7"
        android:clickable="true">
        <TextView
            android:id="@+id/dialer_button_back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="X"
            android:textColor="@color/colorWhite"
            android:textSize="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialer_button_0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="8px"
        android:background="@drawable/dialer_number"
        android:layout_toRightOf="@+id/dialer_button_back"
        android:layout_below="@+id/dialer_button_8"
        android:clickable="true">
        <TextView
            android:id="@+id/dialer_button_0_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="50dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialer_button_ok"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="8px"
        android:background="@drawable/dialer_number"
        android:layout_toRightOf="@+id/dialer_button_0"
        android:layout_below="@+id/dialer_button_9"
        android:clickable="true"
        android:visibility="invisible">
        <TextView
            android:id="@+id/dialer_button_ok_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="OK"
            android:textColor="@color/colorWhite"
            android:textSize="50dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/tc_crowd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/dialer_button_8"
        android:alpha="0.2"
        app:srcCompat="@drawable/tc_crowd_scaled" />

</RelativeLayout>
